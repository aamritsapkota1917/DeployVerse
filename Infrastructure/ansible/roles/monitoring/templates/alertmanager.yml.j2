global:
  resolve_timeout: 5m

route:
  receiver: slack_receiver

receivers:
  - name: slack_receiver
    slack_configs:
      - api_url: "{{ slack_webhook_url }}"
        channel: '#alerts'
        title: 'Alert: {{ .GroupLabels.alertname }}'
        text: '{{ range .Alerts }}{{ .Annotations.summary }}{{ end }}'
        send_resolved: true